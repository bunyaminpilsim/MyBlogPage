@model BlogDTO

@{
    ViewData["Title"] = "Yazı Güncelle";

}

<h2 class="my-4">Yazı Ekle</h2>

<form asp-action="UpdateBlog" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>Yazı No</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="form-group">
        <label>Yazı Başlığı</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="form-group">
        <label>Özet</label>
        <input type="text" class="form-control" asp-for="Summary" />
    </div>
    <div class="form-group">
        <label>İçerik</label>
        <input type="text" class="form-control" asp-for="Content" />
    </div>

    <div class="form-group">
        <label>Kategori</label>
        <select class="form-control" asp-for="CategoryID">
            <option value="">Seçiniz</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <label>Yazar</label>
    <select class="form-control" asp-for="AuthorId">
        <option value="">Seçiniz</option>
        @foreach (var author in ViewBag.Author)
        {
            <option value="@author.Id">@author.Name</option>
        }
    </select>
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
