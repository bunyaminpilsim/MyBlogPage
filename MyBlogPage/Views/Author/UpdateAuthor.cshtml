@model AuthorDTO

@{
    ViewData["Title"] = "Yazar Güncelle";
}

<h2 class="my-4">Yazar Güncelle</h2>

<form asp-action="UpdateAuthor" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label>Yazar No</label>
        <input type="text" class="form-control" asp-for="Id" readonly/>
    </div> 
    <div class="form-group">
        <label>Yazar Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
